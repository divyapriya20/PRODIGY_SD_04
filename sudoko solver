import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Sudoku implements ActionListener {
    char[][] board = new char[9][9];
    JTextField[] cells = new JTextField[81];
    JButton solve = new JButton("AI Solve");
    JButton checker = new JButton("Check");

    Sudoku() {
        JPanel box = new JPanel(new GridLayout(9, 9));
        box.setBorder(BorderFactory.createLineBorder(Color.BLACK));

        for (int i = 0; i < 81; i++) {
            cells[i] = new JTextField();
            cells[i].setBackground(Color.cyan);
            cells[i].setHorizontalAlignment(JTextField.CENTER);
            cells[i].setBorder(BorderFactory.createLineBorder(Color.BLACK, 1));
            cells[i].setFont(new Font("Bahnschrift", Font.BOLD, 30));
            box.add(cells[i]);
        }

        JFrame frame = new JFrame("Sudoku Solver");
        frame.setLayout(new BorderLayout());
        frame.add(box, BorderLayout.CENTER);
        frame.add(solve, BorderLayout.SOUTH);
        frame.add(checker, BorderLayout.NORTH);
        
        solve.addActionListener(this);
        checker.addActionListener(this);
        
        frame.setSize(800, 800);
        frame.setLocationRelativeTo(null);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setVisible(true);
    }

    boolean solveBoard(char[][] board) {
        for (int row = 0; row < 9; row++) {
            for (int col = 0; col < 9; col++) {
                if (board[row][col] == '.') {
                    for (char num = '1'; num <= '9'; num++) {
                        if (isValid(board, row, col, num)) {
                            board[row][col] = num;
                            if (solveBoard(board)) {
                                return true;
                            }
                            board[row][col] = '.';
                        }
                    }
                    return false;
                }
            }
        }
        return true;
    }

    boolean isValid(char[][] board, int row, int col, char num) {
        for (int i = 0; i < 9; i++) {
            if (board[row][i] == num || board[i][col] == num || board[row / 3 * 3 + i / 3][col / 3 * 3 + i % 3] == num) {
                return false;
            }
        }
        return true;
    }

    void loadBoardFromUI() {
        for (int i = 0; i < 81; i++) {
            String text = cells[i].getText();
            board[i / 9][i % 9] = (text.isEmpty() || !Character.isDigit(text.charAt(0))) ? '.' : text.charAt(0);
        }
    }

    void displaySolvedBoard() {
        for (int i = 0; i < 81; i++) {
            cells[i].setText(String.valueOf(board[i / 9][i % 9]));
        }
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == solve) {
            loadBoardFromUI();
            if (solveBoard(board)) {
                displaySolvedBoard();
                JOptionPane.showMessageDialog(null, "Sudoku Solved Successfully!");
            } else {
                JOptionPane.showMessageDialog(null, "No solution exists!");
            }
        } else if (e.getSource() == checker) {
            loadBoardFromUI();
            JOptionPane.showMessageDialog(null, "Board loaded for validation (Add more validation logic if needed)!");
        }
    }

    public static void main(String[] args) {
        new Sudoku();
    }
}
